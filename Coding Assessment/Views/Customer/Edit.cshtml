@model Customer

@{ 
    string title = ViewBag.Action + " Customer";
    ViewBag.Title = title.ToUpper();
   }
<html>
    <body>
        <div class=" m-0 p-4" id="Heading-Container">
            <h2 class="text-white text-center ">@ViewBag.Title</h2>
        </div>
        <form class="myForm" asp-action="Edit"  method="post">
            <div class="form-wrapper">
                <div class="row">
                    <div class="form-group col text-black">
                        <label asp-for="CustomerName"></label>
                        <input class="form-control" id="firstName" asp-for="CustomerName">
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    <div class="form-group col text-black">
                        <label asp-for="PhoneNumber"></label>
                        <input class="form-control" asp-for="PhoneNumber">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="text-black" asp-for="Address"></label>
                    <input class="form-control" asp-for="Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="form-group col">
                        <label class="text-black" asp-for="ContactPersonName"></label>
                        <input class="form-control" asp-for="ContactPersonName">
                        <span asp-validation-for="ContactPersonName" class="text-danger"></span>
                    </div>
                    <div class="form-group  col">
                        <label class="text-black" asp-for="Email"></label>
                        <input class="form-control" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group ">
                    <label class="text-black" asp-for="VatNumber"></label>
                    <input class="form-control" asp-for="VatNumber">
                    <span asp-validation-for="VatNumber" class="text-danger"></span>
                </div>
                <!--button!-->
                <div class="col pl-0 pr-0">
                    <input type="hidden" asp-for="CustomerID" />
                    <button type="submit" class="btn btn-primary w-50">
                        @ViewBag.Action
                    </button>
                    <a asp-controller="Customer" asp-action="Index"  class="btn btn-outline-warning " id="BackBtn">Go Back</a>
                </div>
                <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
            </div>
        </form>
    </body>
</html>